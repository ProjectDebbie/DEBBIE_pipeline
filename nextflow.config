// General configuration used in all profiles
manifest {
  description = 'Medical Materials Pipeline' 
}

// Profiles configure nextflow depending on the environment (local, integration, live, etc.)

profiles {
	standard {
		
		process {
			withName: nlp_standard_preprocessing{
				container = "javicorvi/nlp-standard-preprocessing:1.0"
			}
		}
		
		process {
			withName: umls_tagger{
				container = "umls-tagger:1.1"
			}
		}
		
		process {
			withName: medical_materials{
				container = "own-ontology-annotator:1.0"
			}
		}
		
		process {
			withName: gate_to_json{
				container = "gate_to_json:1.0"
			}
		}
		
		process {
			withName: import_json_to_mongo{
				container = "javicorvi/import-json-to-mongo:1.0"
			}
		}
		
		docker {
                  enabled = true
                  runOptions= '--net=host'
		}
		
	}
}

